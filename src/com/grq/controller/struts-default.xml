<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	
	<!-- OGNL可以使用静态方法 -->
	<constant name="struts.ognl.allowStaticMethodAccess" value="true"/>
	<package name="grq-default" extends="struts-default" abstract="true">
		<global-results>
			<!-- 程序front主页面 -->
			<result name="INDEX">/WEB-INF/pages/index.jsp</result>
			<!-- 程序back管理主页面 -->	
			<result name="manager"></result>
			<!-- 错误页面 -->
			<result name="error"></result>
			<!--管理员登录-->
            <result name="userLogin">/WEB-INF/pages/admin/admin_login.jsp</result>
			<!--会员注册 -->
            <result name="reg"></result>
            <!--会员登录-->
			<result name="customerLogin"></result>			
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="error" exception="com.grq.util.AppException"></exception-mapping>
		</global-exception-mappings>
	</package>

</struts>    
